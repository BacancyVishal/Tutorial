            </intent-filter>
        </activity>
        <activity
            android:name="activities.list.first.TestActivity"
            android:label="@string/title_activity_test"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nimgade.pk.mytutorialapplication.MainActivity" />
        </activity>
        <activity
