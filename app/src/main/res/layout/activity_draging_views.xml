<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activities.list.first.DraggingViewsActivity">

    <include layout="@layout/my_custom_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <HorizontalScrollView
            android:id="@+id/DraggingViewsActivity_horizontalScrollView_up"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/DraggingViewsActivity_imageView_1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:src="@drawable/goku" />

                <ImageView
                    android:id="@+id/DraggingViewsActivity_imageView_2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"

                    android:src="@drawable/goku" />

                <ImageView
                    android:id="@+id/DraggingViewsActivity_imageView_3"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"

                    android:src="@drawable/goku" />

                <ImageView
                    android:id="@+id/DraggingViewsActivity_imageView_4"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"

                    android:src="@drawable/goku" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"

                    android:src="@drawable/goku" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"

                    android:src="@drawable/goku" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"

                    android:src="@drawable/goku" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"

                    android:src="@drawable/goku" />

            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/DraggingViewsActivity_horizontalScrollView_down"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:animateLayoutChanges="true"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/DraggingViewsActivity_imageView_5"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"

                    android:src="@drawable/gohan" />

                <ImageView
                    android:id="@+id/DraggingViewsActivity_imageView_6"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"

                    android:src="@drawable/gohan" />

                <ImageView
                    android:id="@+id/DraggingViewsActivity_imageView_7"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"

                    android:layout_margin="4dp"
                    android:src="@drawable/gohan" />

                <ImageView
                    android:id="@+id/DraggingViewsActivity_imageView_8"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"

                    android:src="@drawable/gohan" />
            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>
